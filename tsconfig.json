{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"importsNotUsedAsValues": "error",
		"esModuleInterop": true,
		"sourceMap": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"declaration": true,
		"rootDir": ".",
		"outDir": "dist",
		"lib": [
			"ESNEXT",
			"DOM"
		],
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"index.ts",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}